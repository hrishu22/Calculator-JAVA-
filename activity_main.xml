<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:orientation="vertical"

    tools:ignore="UselessParent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:gravity="end"
        android:maxLines="1"

        android:padding="15dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="25sp"

        />

    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:gravity="end"
        android:maxLines="1"

        android:padding="15dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="25sp"

        />
    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="NestedWeights">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">


                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights">

                    <Button
                        android:id="@+id/bac"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/ac"
                        android:textColor="@color/orange"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/bc"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/c"
                        android:textColor="@color/orange"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/bb1"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/b2"
                        android:textColor="@color/orange"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/bb2"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/b1"
                        android:textColor="@color/orange"
                        android:textSize="30sp">

                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights">

                    <Button
                        android:id="@+id/bsin"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/sin"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="25sp">

                    </Button>

                    <Button
                        android:id="@+id/bcos"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/cos"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="25sp">

                    </Button>

                    <Button
                        android:id="@+id/btan"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/tan"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="25sp">

                    </Button>

                    <Button
                        android:id="@+id/blog"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/log"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="25sp">

                    </Button>

                    <Button
                        android:id="@+id/bln"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/ln"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="30sp">

                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights">


                    <Button
                        android:id="@+id/bfact"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/fact"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/bsquare"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/x"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="25sp">

                    </Button>

                    <Button
                        android:id="@+id/bunder"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/root"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="24sp">

                    </Button>

                    <Button
                        android:id="@+id/buponx"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/_1_x"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="25sp">

                    </Button>

                    <Button
                        android:id="@+id/bdiv"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/div"
                        android:textColor="@color/orange"
                        android:textSize="25sp">

                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights">

                    <Button
                        android:id="@+id/b7"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F6ECEC"

                        android:text="@string/_7"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/b8"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F6ECEC"

                        android:text="@string/_8"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/b9"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#D5C9C9"

                        android:text="@string/_9"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/bmult"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/mult"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="30sp">

                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights">

                    <Button
                        android:id="@+id/b4"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F6ECEC"

                        android:text="@string/_4"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/b5"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/_5"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/b6"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"


                        android:text="@string/_6"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/bmin"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/min"
                        android:textColor="@color/orange"
                        android:textSize="30sp">

                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights">

                    <Button
                        android:id="@+id/b1"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F6ECEC"

                        android:text="@string/_1"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/b2"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F6ECEC"

                        android:text="@string/_2"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/b3"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F6ECEC"

                        android:text="@string/_3"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/bplus"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/plus"
                        android:textColor="@color/orange"
                        android:textSize="25sp">

                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights">

                    <Button
                        android:id="@+id/bn"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/n"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/bzero"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F6F0F0"

                        android:text="@string/_0"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/bdot"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"


                        android:text="@string/dot"
                        android:textSize="30sp">

                    </Button>

                    <Button
                        android:id="@+id/bequal"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:text="@string/equal"
                        android:textColor="@color/orange"
                        android:textSize="30sp">

                    </Button>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


